<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/joinquiztxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/cursive"
        android:gravity="center"
        android:text="Join a Quiz!"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/quizLogo"
        android:layout_below = "@id/joinquiztxt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        tools:srcCompat="@drawable/kat"
        android:src="@drawable/kat"/>


    <EditText
        android:id="@+id/quizNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="00dp"
        android:layout_below = "@id/quizLogo"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:hint="Quiz ID"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <Button
        android:id="@+id/joinQuizBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below= "@id/quizNameInput"
        android:layout_centerHorizontal="true"
        android:hint= "Join Session"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />


</RelativeLayout>
